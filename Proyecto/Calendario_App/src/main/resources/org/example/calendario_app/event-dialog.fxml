<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" styleClass="dialog-root" stylesheets="@calendar.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.calendario_app.EventDialogController">
    <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
    </padding>

    <Label text="Crear Evento" textFill="WHITE">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>

    <VBox spacing="5.0" alignment="CENTER_LEFT">
        <Label styleClass="input-label" text="Título del Evento" />
        <TextField fx:id="titleField" promptText="Ej: Reunión de equipo" styleClass="dialog-input" />
    </VBox>

    <HBox spacing="15.0">
        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <Label styleClass="input-label" text="Fecha" />
            <DatePicker fx:id="datePicker" promptText="mm/dd/yyyy" styleClass="dialog-input" />
        </VBox>
        <!-- Optional Time Field Placeholder if needed later -->
    </HBox>

    <VBox spacing="5.0" alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
        <Label styleClass="input-label" text="Descripción" />
        <TextArea fx:id="descriptionArea" prefHeight="100.0" promptText="Añade una descripción detallada del evento..." styleClass="dialog-input" wrapText="true" />
    </VBox>

    <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-padding: 10 0 0 0;">
        <Button fx:id="cancelButton" cancelButton="true" text="Cancelar" styleClass="btn-transparent-border" />
        <Button fx:id="saveButton" defaultButton="true" text="Guardar Evento" styleClass="btn-primary-gradient" />
    </HBox>

</VBox>
