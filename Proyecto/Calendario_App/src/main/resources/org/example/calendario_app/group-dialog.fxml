<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" styleClass="dialog-root" stylesheets="@calendar.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.calendario_app.GroupDialogController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Header -->
    <VBox spacing="5.0">
        <Label text="Crear Nuevo Grupo" textFill="WHITE">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label text="Configura tu nuevo grupo de trabajo y añade miembros para empezar a colaborar." textFill="#B0B0B0" />
    </VBox>

    <!-- Group Name -->
    <VBox spacing="5.0">
        <Label styleClass="input-label" text="Nombre del Grupo" />
        <TextField fx:id="nameField" promptText="Ej. Equipo de Diseño UX" styleClass="dialog-input" />
    </VBox>

    <!-- Description -->
    <VBox spacing="5.0">
        <Label styleClass="input-label" text="Descripción del Grupo" />
        <TextArea fx:id="descriptionArea" prefHeight="80.0" promptText="Describe el propósito de este grupo..." styleClass="dialog-input, text-area" wrapText="true" />
    </VBox>

    <!-- Labels -->
    <VBox spacing="10.0">
        <Label styleClass="input-label" text="Etiquetas" />
        <HBox spacing="10.0" alignment="CENTER_LEFT">
             <ComboBox fx:id="labelComboBox" promptText="Seleccionar etiqueta existente..." prefWidth="300.0" styleClass="combo-box"/>
             <Button text="+ Crear nueva etiqueta" onAction="#handleCreateLengthLabel" style="-fx-background-color: #A066F5; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;"/>
        </HBox>
        <FlowPane fx:id="selectedLabelsContainer" hgap="10.0" vgap="10.0" />
    </VBox>

    <!-- Add People -->
    <VBox spacing="10.0">
        <Label styleClass="input-label" text="Añadir Personas" />
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <ComboBox fx:id="userComboBox" promptText="Seleccionar usuario..." HBox.hgrow="ALWAYS" prefWidth="300.0" styleClass="combo-box" />
            <ComboBox fx:id="roleComboBox" promptText="Rol" prefWidth="120.0" styleClass="combo-box"/>
            <Button text="+ Añadir" onAction="#handleAddMember" style="-fx-background-color: #A066F5; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;"/>
        </HBox>
        
        <!-- Members List -->
        <VBox style="-fx-background-color: #1E2126; -fx-background-radius: 5; -fx-padding: 10;">
             <Label text="MIEMBROS" style="-fx-text-fill: #7F8C8D; -fx-font-size: 10px; -fx-font-weight: bold;"/>
             <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;" prefHeight="100.0">
                 <content>
                     <VBox fx:id="membersContainer" spacing="5.0" />
                 </content>
             </ScrollPane>
        </VBox>
    </VBox>

    <!-- Footer -->
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button onAction="#handleCancel" text="Cancelar" styleClass="btn-transparent-border" />
        <Button onAction="#handleCreateGroup" text="Crear Grupo" style="-fx-background-color: #A066F5; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 20; -fx-cursor: hand; -fx-font-weight: bold;" />
    </HBox>

</VBox>
