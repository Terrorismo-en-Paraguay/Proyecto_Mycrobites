<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/background_dark"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CreaciÃ³n de Etiqueta"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/btn_close_dialog"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                app:tint="#AAA"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <!-- Name Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la Etiqueta"
            android:textColor="#DDD"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_label_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_field"
            android:hint="Proyectos"
            android:textColorHint="#666"
            android:textColor="@color/white"
            android:paddingHorizontal="16dp"
            android:inputType="text"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="24dp"/>

        <!-- Calendar Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calendario (Opcional)"
            android:textColor="#DDD"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>
            
        <Spinner
            android:id="@+id/spinner_calendar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_field"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="24dp"
            android:popupBackground="@color/surface"/>

        <!-- Color Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color de Etiqueta"
            android:textColor="#DDD"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="24dp">
            
            <LinearLayout
                android:id="@+id/layout_colors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Colors will be added dynamically or hardcoded if fixed list -->
                <!-- Hardcoding the 5 colors from image for now, but better dynamic logic in Fragment -->
                <View
                    android:id="@+id/color_purple"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_color_circle"
                    android:backgroundTint="#8A2BE2"
                    android:tag="#8A2BE2"
                    android:layout_marginEnd="12dp"/>
                <View
                     android:id="@+id/color_pink"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_color_circle"
                    android:backgroundTint="#E040FB"
                    android:tag="#E040FB"
                    android:layout_marginEnd="12dp"/>
                 <View
                    android:id="@+id/color_blue"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_color_circle"
                    android:backgroundTint="#2979FF"
                    android:tag="#2979FF"
                    android:layout_marginEnd="12dp"/>
                 <View
                    android:id="@+id/color_teal"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_color_circle"
                    android:backgroundTint="#00BFA5"
                    android:tag="#00BFA5"
                    android:layout_marginEnd="12dp"/>
                 <View
                    android:id="@+id/color_orange"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_color_circle"
                    android:backgroundTint="#FF6D00"
                    android:tag="#FF6D00"
                    android:layout_marginEnd="12dp"/>
                 <View
                    android:id="@+id/color_grey"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_color_circle"
                    android:backgroundTint="#607D8B"
                    android:tag="#607D8B"/>
            </LinearLayout>
        </HorizontalScrollView>


        <!-- Preview Section -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_preview_border"
            android:padding="16dp"
            android:layout_marginBottom="24dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Vista previa"
                    android:textColor="#DDD"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
                    
                <LinearLayout
                    android:id="@+id/preview_chip_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/bg_chip_preview"
                    android:backgroundTint="#8A2BE2"
                    android:gravity="center_vertical">
                    
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_label"
                        app:tint="@color/white"
                        android:layout_marginEnd="8dp"/>
                        
                    <TextView
                        android:id="@+id/preview_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proyectos"
                        android:textColor="@color/white"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:maxWidth="100dp"
                        android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/btn_save_label"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Guardar Etiqueta"
            android:textColor="@color/white"
            android:backgroundTint="#8A2BE2" 
            app:icon="@drawable/ic_check"
            app:iconGravity="textStart"
            android:textAllCaps="false"
            android:insetTop="0dp"
            android:insetBottom="0dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
