<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Top Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btn_menu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Calendario"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_menu"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- User Avatar Circle with Initial -->
            <FrameLayout
                android:id="@+id/layout_profile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_circle_selected"
                android:backgroundTint="@color/primary_purple"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                
                <TextView
                    android:id="@+id/tv_user_initial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="U"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </FrameLayout>
                
            <ImageView
                android:id="@+id/btn_search"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_search" 
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/layout_profile"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Search Bar (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_input_field"
            android:hint="Buscar eventos..."
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/text_secondary" />

        <ImageView
            android:id="@+id/btn_close_search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_close"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- Search Results (Initially Hidden) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_results_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintTop_toBottomOf="@+id/layout_search" />

    <!-- Month Navigation -->
    <LinearLayout
        android:id="@+id/layout_month_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_search">

        <TextView
            android:id="@+id/tv_month_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Octubre 2024"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/ic_arrow_drop_down"
            app:drawableTint="@color/text_secondary" />

        <TextView
            android:id="@+id/btn_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_outlined"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="Hoy"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/btn_prev_month"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_chevron_left"
            app:tint="@color/text_secondary" />

        <ImageView
            android:id="@+id/btn_next_month"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="@color/text_secondary" />
    </LinearLayout>

    <!-- Weekday Header -->
    <LinearLayout
        android:id="@+id/layout_weekdays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_month_nav">

        <TextView
            style="@style/CalendarWeekdayStyle"
            android:text="LU" />
        <TextView
            style="@style/CalendarWeekdayStyle"
            android:text="MA" />
        <TextView
            style="@style/CalendarWeekdayStyle"
            android:text="MI" />
        <TextView
            style="@style/CalendarWeekdayStyle"
            android:text="JU" />
        <TextView
            style="@style/CalendarWeekdayStyle"
            android:text="VI" />
        <TextView
            style="@style/CalendarWeekdayStyle"
            android:text="SA" />
        <TextView
            style="@style/CalendarWeekdayStyle"
            android:text="DO" />
    </LinearLayout>

    <!-- Calendar Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/calendar_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintTop_toBottomOf="@+id/layout_weekdays" />

    <View
        android:id="@+id/divider"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        android:background="#333"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendar_recycler_view" />

    <!-- Schedule Header -->
    <TextView
        android:id="@+id/tv_schedule_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="SÃBADO, 12 OCTUBRE"
        android:textAllCaps="true"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <!-- Events List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/events_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintTop_toBottomOf="@+id/tv_schedule_header" />

    <!-- FAB -->
    <!-- FAB Menu Options (Initially Hidden) -->
    
    <!-- Option: Label -->
    <TextView
        android:id="@+id/tv_option_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_btn_outlined"
        android:backgroundTint="@color/surface"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="Crear Etiqueta"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/fab_option_label"
        app:layout_constraintEnd_toStartOf="@+id/fab_option_label"
        app:layout_constraintTop_toTopOf="@+id/fab_option_label" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_option_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/surface"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_label"
        app:tint="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/fab_option_calendar"
        app:layout_constraintEnd_toEndOf="@+id/fab_main"
        app:layout_constraintStart_toStartOf="@+id/fab_main" />

    <!-- Option: Calendar -->
    <TextView
        android:id="@+id/tv_option_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_btn_outlined"
        android:backgroundTint="@color/surface"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="@string/option_create_calendar"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/fab_option_calendar"
        app:layout_constraintEnd_toStartOf="@+id/fab_option_calendar"
        app:layout_constraintTop_toTopOf="@+id/fab_option_calendar" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_option_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/surface"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_calendar"
        app:tint="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/fab_option_event"
        app:layout_constraintEnd_toEndOf="@+id/fab_main"
        app:layout_constraintStart_toStartOf="@+id/fab_main" />

    <!-- Option: Event -->
    <TextView
        android:id="@+id/tv_option_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_btn_outlined"
        android:backgroundTint="@color/surface"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="Crear Evento"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/fab_option_event"
        app:layout_constraintEnd_toStartOf="@+id/fab_option_event"
        app:layout_constraintTop_toTopOf="@+id/fab_option_event" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_option_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/surface"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_calendar_event"
        app:tint="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/fab_main"
        app:layout_constraintEnd_toEndOf="@+id/fab_main"
        app:layout_constraintStart_toStartOf="@+id/fab_main" />

    <!-- Main FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/primary_purple"
        app:srcCompat="@drawable/ic_add"
        app:tint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Navigation Area -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_200"
        app:itemIconTint="@color/bottom_nav_item_color"
        app:itemTextColor="@color/bottom_nav_item_color"
        app:itemActiveIndicatorStyle="@null"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
