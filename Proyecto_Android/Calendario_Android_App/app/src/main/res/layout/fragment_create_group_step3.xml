<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_left"
                app:tint="@color/primary_purple"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/back"
                android:textColor="@color/primary_purple"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <!-- Progress Indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_color_circle"
                    android:backgroundTint="@color/primary_purple"/>

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bg_color_circle"
                    android:backgroundTint="@color/primary_purple"/>

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bg_color_circle"
                    android:backgroundTint="@color/primary_purple"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_group_title"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step3_subtitle"
            android:textColor="#888"
            android:textSize="14sp"
            android:layout_marginBottom="32dp"/>

        <!-- Add Members Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_members_section"
            android:textColor="@color/primary_purple"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="16dp"/>

        <!-- Email Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_member_email"
            android:textColor="#888"
            android:textSize="12sp"
            android:letterSpacing="0.05"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_member_email"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_input_field"
            android:hint="@string/hint_member_email"
            android:textColorHint="#555"
            android:textColor="@color/white"
            android:paddingHorizontal="16dp"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="16dp"/>

        <!-- Role and Add Button Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_role"
                    android:textColor="#888"
                    android:textSize="12sp"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="8dp"/>

                <Spinner
                    android:id="@+id/spinner_role"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_input_field"
                    android:paddingHorizontal="12dp"
                    android:spinnerMode="dropdown"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_member"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginTop="28dp"
                android:text="@string/btn_add_member"
                android:textColor="@color/white"
                app:backgroundTint="@color/primary_purple"
                app:cornerRadius="8dp"
                android:textAllCaps="false"
                app:icon="@drawable/ic_add"
                app:iconTint="@color/white"/>
        </LinearLayout>

        <!-- Current Members Section -->
        <TextView
            android:id="@+id/tv_members_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_members_section"
            android:textColor="@color/primary_purple"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="16dp"/>

        <!-- Members RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"/>

        <!-- Info Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/bg_input_field"
            android:backgroundTint="#1a1a1a"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Las etiquetas ayudan a filtrar los eventos del calendario y organizar mejor las tareas del grupo."
                android:textColor="#888"
                android:textSize="12sp"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>

        <!-- Spacer -->
        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Create Group Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create_group"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/btn_create_group"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/primary_purple"
            app:cornerRadius="12dp"
            android:textAllCaps="false"/>

    </LinearLayout>
</ScrollView>
