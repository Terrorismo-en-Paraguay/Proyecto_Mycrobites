<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@color/bg_100"
    android:padding="16dp">

    <!-- Header: User Profile -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/avatar_container"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_selected"
            android:backgroundTint="@color/primary_purple"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            
            <TextView
                android:id="@+id/tv_avatar_initial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="U"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Usuario"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/avatar_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/avatar_container"/>

        <TextView
            android:id="@+id/tv_user_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="usuario@email.com"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/avatar_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_name"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider_header"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="#22FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/header_container"/>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/divider_header"
        app:layout_constraintBottom_toTopOf="@+id/footer_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Calendars Section -->
            <LinearLayout
                android:id="@+id/section_calendars_header"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input_field"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:orientation="horizontal">
                
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/primary_purple"/>
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Mis calendarios"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/iv_expand_calendars"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_expand_less"
                    app:tint="@color/text_secondary"/>
            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll_calendars"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#15FFFFFF"
                android:fillViewport="false"
                android:scrollbars="vertical">
                
                <LinearLayout
                    android:id="@+id/container_calendars_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">
                    
                    <!-- Mock Items with CheckBox -->
                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Personal"
                        android:textColor="@color/white"
                        android:button="@drawable/selector_checkbox_tick"
                        android:buttonTint="@color/primary_purple"
                        android:layoutDirection="rtl"
                        android:paddingStart="8dp"
                        android:checked="true"/>

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Trabajo"
                        android:textColor="@color/white"
                        android:button="@drawable/selector_checkbox_tick"
                        android:buttonTint="@color/primary_purple"
                        android:layoutDirection="rtl"
                        android:paddingStart="8dp"
                        android:checked="true"/>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <!-- Labels Section -->
            <LinearLayout
                android:id="@+id/section_labels_header"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_input_field"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:orientation="horizontal">
                
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_label"
                    app:tint="@color/primary_purple"/>
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Etiquetas"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/iv_expand_labels"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_expand_less"
                    app:tint="@color/text_secondary"/>
            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll_labels"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#15FFFFFF"
                android:fillViewport="false"
                android:scrollbars="vertical">
                
                <LinearLayout
                    android:id="@+id/container_labels_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Mock Items with CheckBox -->
                     <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Urgente"
                        android:textColor="@color/white"
                        android:button="@drawable/selector_checkbox_tick"
                        android:buttonTint="@color/primary_purple"
                        android:layoutDirection="rtl"
                        android:paddingStart="8dp"
                        android:checked="false"/>

                     <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Viajes"
                        android:textColor="@color/white"
                        android:button="@drawable/selector_checkbox_tick"
                        android:buttonTint="@color/primary_purple"
                        android:layoutDirection="rtl"
                        android:paddingStart="8dp"
                        android:checked="true"/>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <!-- Footer (Moved Inside Scroll Content) -->
            <LinearLayout
                android:id="@+id/footer_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/btn_settings"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Configuración"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/ic_settings"
                    android:drawablePadding="16dp"
                    android:background="?attr/selectableItemBackground"/>

                <TextView
                    android:id="@+id/btn_help"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Ayuda"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/ic_help"
                    android:drawablePadding="16dp"
                    android:background="?attr/selectableItemBackground"/>

                <TextView
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_input_field"
                    android:text="Cerrar sesión"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:drawableStart="@drawable/ic_logout"
                    android:drawablePadding="8dp"
                    android:paddingHorizontal="16dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
