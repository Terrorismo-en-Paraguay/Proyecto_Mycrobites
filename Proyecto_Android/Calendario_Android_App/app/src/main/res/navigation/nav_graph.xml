<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.calendario_android_app.fragments.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_calendarFragment"
            app:destination="@id/calendarFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.calendario_android_app.fragments.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_registerFragment_to_calendarFragment"
            app:destination="@id/calendarFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.example.calendario_android_app.fragments.CalendarFragment"
        android:label="CalendarFragment">
        <action
            android:id="@+id/action_calendarFragment_to_createEventFragment"
            app:destination="@id/createEventFragment" />
        <action
            android:id="@+id/action_calendarFragment_to_createGroupStep1Fragment"
            app:destination="@id/createGroupStep1Fragment" />
        <action
            android:id="@+id/action_calendarFragment_to_eventDetailFragment"
            app:destination="@id/eventDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/eventDetailFragment"
        android:name="com.example.calendario_android_app.fragments.EventDetailFragment"
        android:label="EventDetailFragment">
        <argument
            android:name="idEvento"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/createGroupStep1Fragment"
        android:name="com.example.calendario_android_app.fragments.CreateGroupStep1Fragment"
        android:label="CreateGroupStep1Fragment">
        <action
            android:id="@+id/action_createGroupStep1Fragment_to_createGroupStep2Fragment"
            app:destination="@id/createGroupStep2Fragment" />
    </fragment>

    <fragment
        android:id="@+id/createGroupStep2Fragment"
        android:name="com.example.calendario_android_app.fragments.CreateGroupStep2Fragment"
        android:label="CreateGroupStep2Fragment">
        <action
            android:id="@+id/action_createGroupStep2Fragment_to_createGroupStep3Fragment"
            app:destination="@id/createGroupStep3Fragment" />
    </fragment>

    <fragment
        android:id="@+id/createGroupStep3Fragment"
        android:name="com.example.calendario_android_app.fragments.CreateGroupStep3Fragment"
        android:label="CreateGroupStep3Fragment" />

    <fragment
        android:id="@+id/createEventFragment"
        android:name="com.example.calendario_android_app.fragments.CreateEventFragment"
        android:label="CreateEventFragment" />

    <action
        android:id="@+id/action_global_calendarFragment"
        app:destination="@id/calendarFragment"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true"/>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.calendario_android_app.fragments.SettingsFragment"
        android:label="SettingsFragment" />

    <fragment
        android:id="@+id/groupDetailFragment"
        android:name="com.example.calendario_android_app.fragments.GroupDetailFragment"
        android:label="GroupDetailFragment">
        <argument
            android:name="idGrupo"
            app:argType="integer" />
    </fragment>

    <action
        android:id="@+id/action_global_groupDetailFragment"
        app:destination="@id/groupDetailFragment" />

    <action
        android:id="@+id/action_global_settingsFragment"
        app:destination="@id/settingsFragment" />

</navigation>
